            <id>bennyfio</id>
            <name>Benedetto Fiorelli</name>
            <email>bennyfio@ebi.ac.uk</email>
            <organization>EBI</organization>
            <organizationUrl>http://www.ebi.ac.uk</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>0</timezone>
