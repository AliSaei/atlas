        </developer>
        <developer>
            <id>nsklyar</id>
            <name>Nataliya Kryvych</name>
            <email>nsklyar@ebi.ac.uk</email>
            <organization>EBI</organization>
            <organizationUrl>http://www.ebi.ac.uk</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>0</timezone>
            <properties/>
        </developer>
    </developers>

    <modules>
        <module>web</module>
    </modules>
</project>
