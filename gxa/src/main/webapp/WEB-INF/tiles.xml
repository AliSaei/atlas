<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="foundation-base" template="/WEB-INF/jsp/layouts/foundation-base.jsp">
        <put-attribute name="title" value="Expression Atlas"/>
        <put-attribute name="top-menu" value="/WEB-INF/jsp/tiles/top-menu.jsp"/>
        <put-attribute name="header"/>
        <put-attribute name="body"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/tiles/footer.jsp"/>
        <put-attribute name="news" value="/WEB-INF/jsp/tiles/twitter-timeline.jsp"/>
        <put-attribute name="mega-footer" value="/WEB-INF/jsp/tiles/mega-footer.jsp"/>
    </definition>

    <definition name="foundation-home" extends="foundation-base">
        <put-attribute name="header"  value="/WEB-INF/jsp/tiles/header.jsp"/>
        <put-attribute name="body">
            <definition template="/WEB-INF/jsp/layouts/foundation-home-body.jsp">
                <put-attribute name="home-hero" value="/WEB-INF/jsp/tiles/home/hero.jsp"/>
                <put-attribute name="home-search" value="/WEB-INF/jsp/tiles/home/search.jsp"/>
                <put-attribute name="browse-by-box" value="/WEB-INF/jsp/tiles/home/browse-by.jsp"/>
                <put-attribute name="experiment-list-latest-box" value="/WEB-INF/jsp/tiles/home/experiment-list-latest.jsp"/>
                <put-attribute name="tools-box" value="/WEB-INF/jsp/tiles/home/tools.jsp"/>
                <put-attribute name="publications-box" value="/WEB-INF/jsp/tiles/home/publications.jsp"/>
            </definition>
        </put-attribute>
    </definition>

    <definition name="base.definition" template="/WEB-INF/jsp/layout.jsp">
        <put-attribute name="title" value="Expression Atlas"/>
        <put-attribute name="top-menu" value="/WEB-INF/jsp/layout/top-menu.jsp"/>
        <put-attribute name="header" value=""/>
        <put-attribute name="body" value=""/>
        <put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jsp"/>
    </definition>

    <definition name="experiment_specific" extends="base.definition">
        <put-attribute name="title" value="Experiment"/>
        <put-attribute name="header" value="/WEB-INF/jsp/includes/experiment-header.jsp"/>
        <put-attribute name="body" value=""/>
    </definition>

    <definition name="experiment" extends="experiment_specific">
        <put-attribute name="body" value="/WEB-INF/jsp/experiment.jsp"/>
    </definition>

    <definition name="experiment-analysis-methods" extends="experiment_specific">
        <put-attribute name="title" value="Experiment - analysis methods"/>
        <put-attribute name="body" value="/WEB-INF/jsp/experiment-analysis-methods.jsp"/>
    </definition>

    <definition name="experiment-experiment-design" extends="experiment_specific">
        <put-attribute name="title" value="Experiment - experiment design"/>
        <put-attribute name="body" value="/WEB-INF/jsp/experiment-experiment-design.jsp"/>
    </definition>

    <definition name="qc-template" extends="experiment_specific">
        <put-attribute name="title" value="Experiment - QC Report"/>
        <put-attribute name="body" value="/WEB-INF/jsp/qc-template.jsp"/>
    </definition>

    <definition name="fast-qc-template" extends="experiment_specific">
        <put-attribute name="title" value="Experiment - FastQC Report"/>
        <put-attribute name="body" value="/WEB-INF/jsp/fast-qc-template.jsp"/>
    </definition>

    <definition name="experiments" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/experiments.jsp"/>
    </definition>

    <definition name="home" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/home.jsp"/>
    </definition>

    <definition name="baseline-experiments" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/baseline-experiments.jsp"/>
    </definition>

    <definition name="plant-experiments" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/plant-experiments.jsp"/>
    </definition>

    <definition name="bioentities-search-results" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/bioentities/new-bioentities-search-results.jsp"/>
    </definition>

    <definition name="bioentities" extends="base.definition">
        <put-attribute name="title" value="Expression Atlas > Gene information"/>
        <put-attribute name="body" value="/WEB-INF/jsp/bioentities/bioentities.jsp"/>
    </definition>

    <!-- error pages -->
    <definition name="error-page" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/error/error-page.jsp"/>
    </definition>

    <definition name="experiment-not-found-page" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/error/experiment-not-found-page.jsp"/>
    </definition>

    <definition name="query-error-page" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/error/query-error-page.jsp"/>
    </definition>

    <definition name="search-error" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/error/search-error.jsp"/>
    </definition>

    <definition name="empty-search-page" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/error/empty-search-page.jsp"/>
    </definition>

    <!-- static pages, eg: about, help -->
    <definition name="static-template" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/jsp/static-template.jsp"/>
    </definition>

    <definition name="widget-error" template="/WEB-INF/jsp/error/widget-error.jsp">
    </definition>

    <definition name="das-features" template="/WEB-INF/jsp/das-features.jsp">
    </definition>
</tiles-definitions>