<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="foundation-base" template="/WEB-INF/jsp/layouts/foundation-base.jsp">
        <put-attribute name="header">
            <definition template="/WEB-INF/jsp/tiles/headers/masthead.jsp">
                <put-attribute name="global-masthead" value="/WEB-INF/jsp/tiles/headers/home/global-masthead.jsp"/>
                <put-attribute name="local-masthead" value="/WEB-INF/jsp/tiles/headers/home/local-masthead.jsp"/>
            </definition>
        </put-attribute>
        <put-attribute name="content"/>
        <put-attribute name="local-footer" value="/WEB-INF/jsp/tiles/local-footer.jsp"/>
        <put-attribute name="global-footer" value="/WEB-INF/jsp/tiles/global-footer.jsp"/>
    </definition>

    <definition name="foundation-base-compact" template="/WEB-INF/jsp/layouts/foundation-base.jsp">
        <put-attribute name="header">
            <definition template="/WEB-INF/jsp/tiles/headers/masthead-compact.jsp">
                <put-attribute name="global-masthead-black-bar" value="/WEB-INF/jsp/tiles/headers/compact/global-masthead-black-bar.jsp"/>
                <put-attribute name="local-masthead-compact" value="/WEB-INF/jsp/tiles/headers/compact/local-masthead-compact.jsp"/>
            </definition>
        </put-attribute>
        <put-attribute name="content"/>
        <put-attribute name="local-footer" value="/WEB-INF/jsp/tiles/local-footer.jsp"/>
        <put-attribute name="global-footer" value="/WEB-INF/jsp/tiles/global-footer.jsp"/>
    </definition>

    <definition name="foundation-home" extends="foundation-base">
        <put-attribute name="title" value="Home &lt; "/>
        <put-attribute name="content">
            <definition template="/WEB-INF/jsp/layouts/foundation-home-body.jsp">
                <put-attribute name="home-hero" value="/WEB-INF/jsp/tiles/home/hero.jsp"/>
                <put-attribute name="home-search" value="/WEB-INF/jsp/tiles/home/search.jsp"/>
                <put-attribute name="browse-by-box" value="/WEB-INF/jsp/tiles/home/browse-by.jsp"/>
                <put-attribute name="experiment-list-latest-box" value="/WEB-INF/jsp/tiles/home/experiment-list-latest.jsp"/>
                <put-attribute name="tools-box" value="/WEB-INF/jsp/tiles/home/tools.jsp"/>
                <put-attribute name="publications-box" value="/WEB-INF/jsp/tiles/home/publications.jsp"/>
                <put-attribute name="news" value="/WEB-INF/jsp/tiles/twitter-timeline.jsp"/>
            </definition>
        </put-attribute>
    </definition>

    <definition name="foundation-static" extends="foundation-base-compact">
        <put-attribute name="title" value=""/>
        <put-attribute name="content" value="/WEB-INF/jsp/foundation-static-template.jsp"/>
    </definition>

    <definition name="foundation-experiments" extends="foundation-base-compact">
        <put-attribute name="title" value="Experiments &lt; "/>
        <put-attribute name="content" value="/WEB-INF/jsp/foundation-experiments.jsp"/>
    </definition>

    <definition name="foundation-experiment-page" extends="foundation-base-compact">
        <put-attribute name="title" value="Experiment &lt; "/>
        <put-attribute name="content" value="/WEB-INF/jsp/foundation-experiment-page.jsp"/>
    </definition>

    <definition name="foundation-baseline-experiments" extends="foundation-base-compact">
        <put-attribute name="title" value="Baseline experiments &lt; "/>
        <put-attribute name="content" value="/WEB-INF/jsp/foundation-baseline-experiments.jsp"/>
    </definition>

    <definition name="foundation-plants-experiments" extends="foundation-base-compact">
        <put-attribute name="title" value="Plant experiments &lt; "/>
        <put-attribute name="content" value="/WEB-INF/jsp/foundation-plants-experiments.jsp"/>
    </definition>

    <definition name="gene-set-enrichment-results" extends="foundation-base-compact">
        <put-attribute name="title" value="Gene set enrichment results &lt; "/>
        <put-attribute name="content" value="/WEB-INF/jsp/gene-set-enrichment-results.jsp"/>
    </definition>

    <definition name="foundation-bioentities-search-results" extends="foundation-base-compact">
        <put-attribute name="title" value="Search results &lt; "/>
        <put-attribute name="content" value="/WEB-INF/jsp/bioentities/foundation-bioentities-search-results.jsp"/>
    </definition>

    <definition name="request-diagnostics" extends="foundation-base">
        <put-attribute name="title" value="Search results &lt; "/>
        <put-attribute name="content" value="/WEB-INF/jsp/views/request-diagnostics.jsp"/>
    </definition>

    <definition name="qc-template" template="/WEB-INF/jsp/qc-template.jsp">
    </definition>

    <definition name="das-features" template="/WEB-INF/jsp/das-features.jsp">
    </definition>

    <!--Error pages-->
    <definition name="error-page" extends="foundation-base">
        <put-attribute name="title" value="Error &lt; "/>
        <put-attribute name="content" value="/WEB-INF/jsp/tiles/errors/generic-error.jsp"/>
    </definition>

    <!--Not technically an error, but it seems the best place to put it-->
    <definition name="no-results" extends="foundation-base">
        <put-attribute name="title" value="No results &lt; "/>
        <put-attribute name="content" value="/WEB-INF/jsp/tiles/errors/no-results.jsp"/>
    </definition>
</tiles-definitions>