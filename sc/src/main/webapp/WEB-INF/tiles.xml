<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="base" template="/WEB-INF/jsp/layouts/base.jsp">
        <put-attribute name="title" value="Single Cell Expression Atlas"/>
        <put-attribute name="masthead-black-bar" value="/WEB-INF/jsp/tiles/masthead-black-bar.jsp"/>
        <put-attribute name="masthead"/>
        <put-attribute name="body"/>
        <put-attribute name="local-footer" value="/WEB-INF/jsp/tiles/local-footer.jsp"/>
        <put-attribute name="credits" value="/WEB-INF/jsp/tiles/collaborators.jsp"/>
        <put-attribute name="global-footer" value="/WEB-INF/jsp/tiles/global-footer.jsp"/>
    </definition>

    <definition name="home" extends="base">
        <put-attribute name="title" value="Home &lt; Single Cell Expression Atlas &lt; EMBL-EBI"/>
        <put-attribute name="masthead" value="/WEB-INF/jsp/tiles/home/masthead.jsp"/>
        <put-attribute name="body">
            <definition template="/WEB-INF/jsp/layouts/home-body.jsp">
                <put-attribute name="home-hero" value="/WEB-INF/jsp/tiles/home/hero.jsp"/>
                <put-attribute name="search" value="/WEB-INF/jsp/tiles/search.jsp"/>
                <put-attribute name="experiment-list-latest-box" value="/WEB-INF/jsp/tiles/home/experiment-list-latest.jsp"/>
                <put-attribute name="type-cell" value="/WEB-INF/jsp/tiles/home/type-cell.jsp"/>
                <put-attribute name="type-tissue" value="/WEB-INF/jsp/tiles/home/type-tissue.jsp"/>
                <put-attribute name="tools-box" value="/WEB-INF/jsp/tiles/home/tools.jsp"/>
                <put-attribute name="publications-box" value="/WEB-INF/jsp/tiles/home/publications.jsp"/>
                <put-attribute name="news" value="/WEB-INF/jsp/tiles/home/latest-tweet.jsp"/>
            </definition>
        </put-attribute>
    </definition>

    <definition name="search-results" extends="base">
        <put-attribute name="title" value="Search results &lt; Single Cell Expression Atlas &lt; EMBL-EBI"/>
        <put-attribute name="masthead" value="/WEB-INF/jsp/tiles/home/masthead.jsp"/>
        <put-attribute name="body" value="">
            <definition template="/WEB-INF/jsp/layouts/search-body.jsp">
                <put-attribute name="search" value="/WEB-INF/jsp/tiles/search.jsp"/>
                <put-attribute name="marker-genes" value="/WEB-INF/jsp/tiles/search/marker-genes.jsp"/>
            </definition>
        </put-attribute>
    </definition>

    <definition name="experiment-base" extends="base">
        <put-attribute name="masthead"  value="/WEB-INF/jsp/tiles/experiment/header.jsp"/>
    </definition>

    <definition name="experiment-page" extends="experiment-base">
        <put-attribute name="body">
            <definition template="/WEB-INF/jsp/layouts/experiment-body.jsp">
                <put-attribute name="description-blurb" value="/WEB-INF/jsp/tiles/experiment/description.jsp"/>
                <put-attribute name="react-container"
                               value="/WEB-INF/jsp/tiles/experiment/react-container-experiment-page.jsp"/>
            </definition>
        </put-attribute>
    </definition>

    <definition name="experiment-reference-plot" extends="experiment-base">
        <put-attribute name="body">
            <definition template="/WEB-INF/jsp/layouts/experiment-body.jsp">
                <put-attribute name="description-blurb" value="/WEB-INF/jsp/tiles/experiment/description.jsp"/>
                <put-attribute name="react-container"
                               value="/WEB-INF/jsp/tiles/experiment/react-reference-plot-experiment-page.jsp"/>
            </definition>
        </put-attribute>
    </definition>

    <definition name="experiment-tsne-plot" extends="experiment-base">
        <put-attribute name="body">
            <definition template="/WEB-INF/jsp/layouts/experiment-body.jsp">
                <put-attribute name="description-blurb" value="/WEB-INF/jsp/tiles/experiment/description.jsp"/>
                <put-attribute name="react-container"
                               value="/WEB-INF/jsp/tiles/experiment/react-tsne-plot-experiment-page.jsp"/>
            </definition>
        </put-attribute>
    </definition>

    <definition name="experiment-spatial" extends="experiment-base">
        <put-attribute name="body">
            <definition template="/WEB-INF/jsp/layouts/experiment-body.jsp">
                <put-attribute name="description-blurb" value="/WEB-INF/jsp/tiles/experiment/description.jsp"/>
                <put-attribute name="react-container" value="/WEB-INF/jsp/tiles/experiment/react-bw3d-experiment-page.jsp"/>
            </definition>
        </put-attribute>
    </definition>
    
</tiles-definitions>