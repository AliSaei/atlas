<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="base" template="/WEB-INF/jsp/layouts/base.jsp">
        <put-attribute name="title" value="Expression Atlas"/>
        <put-attribute name="top-menu" value="/WEB-INF/jsp/tiles/top-menu.jsp"/>
        <put-attribute name="header"/>
        <put-attribute name="body"/>
        <put-attribute name="news"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/tiles/footer.jsp"/>
        <put-attribute name="mega-footer" value="/WEB-INF/jsp/tiles/mega-footer.jsp"/>
    </definition>

    <definition name="home" extends="base">
        <put-attribute name="header"  value="/WEB-INF/jsp/tiles/header.jsp"/>
        <put-attribute name="body">
            <definition template="/WEB-INF/jsp/layouts/home-body.jsp">
                <put-attribute name="home-hero" value="/WEB-INF/jsp/tiles/home/hero.jsp"/>
                <put-attribute name="home-search" value="/WEB-INF/jsp/tiles/home/search.jsp"/>
                <put-attribute name="browse-by-box" value="/WEB-INF/jsp/tiles/home/browse-by.jsp"/>
                <put-attribute name="experiment-list-latest-box" value="/WEB-INF/jsp/tiles/home/experiment-list-latest.jsp"/>
                <put-attribute name="tools-box" value="/WEB-INF/jsp/tiles/home/tools.jsp"/>
                <put-attribute name="publications-box" value="/WEB-INF/jsp/tiles/home/publications.jsp"/>
            </definition>
        </put-attribute>
        <put-attribute name="news" value="/WEB-INF/jsp/tiles/twitter-timeline.jsp"/>
    </definition>

    <definition name="experiment" extends="base">
        <put-attribute name="header"  value="/WEB-INF/jsp/tiles/experiment/header.jsp"/>
        <put-attribute name="body">
            <definition template="/WEB-INF/jsp/layouts/experiment-body.jsp">
                <put-attribute name="description-blurb" value="/WEB-INF/jsp/tiles/experiment/description.jsp"/>
                <put-attribute name="react-container" value="/WEB-INF/jsp/tiles/experiment/react-container.jsp"/>
            </definition>
        </put-attribute>
        <put-attribute name="news" value=""/>

    </definition>
    
</tiles-definitions>