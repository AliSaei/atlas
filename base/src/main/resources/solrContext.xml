<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="solrClientGxa" class="org.apache.solr.client.solrj.impl.HttpSolrClient">
        <constructor-arg value="http://${solr.host}:8983/solr/gxa"/>
    </bean>

    <bean id="solrClientAnalytics" class="org.apache.solr.client.solrj.impl.HttpSolrClient">
        <constructor-arg value="http://${solr.host}:8983/solr/analytics"/>
    </bean>

    <bean id="solrClientDifferentialConditions" class="org.apache.solr.client.solrj.impl.HttpSolrClient">
        <constructor-arg value="http://${solr.host}:8983/solr/differentialConditions"/>
    </bean>

    <bean id="solrClientBaselineConditions" class="org.apache.solr.client.solrj.impl.HttpSolrClient">
        <constructor-arg value="http://${solr.host}:8983/solr/baselineConditions"/>
    </bean>

    <bean id="solrSuggestionServerURL" class="java.lang.String">
        <constructor-arg value="http://${solr.host}:8983/solr/gxa/"/>
    </bean>

    <bean id="solrAnalyticsServerURL" class="java.lang.String">
        <constructor-arg value="http://${solr.host}:8983/solr/analytics/"/>
    </bean>

</beans>